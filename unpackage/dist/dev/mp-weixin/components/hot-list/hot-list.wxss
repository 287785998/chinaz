  position: relative;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 32rpx;
  padding-left: 48rpx;
}
.list .num {
  position: absolute;
  top: 3px;
  left: 0;
  display: block;
  width: 16px;
  height: 16px;
  box-sizing: border-box;
  font-size: 12px;
  line-height: 15px;
  text-align: center;
  color: #fff;
  border-radius: 2px;
  background: #ababab;
}
.list .li0 .fir {
  background: #f84521;
}
.list .li1 .fir {
